<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cups.android"
    android:installLocation="auto"
    android:versionCode="108"
    android:versionName="1.0.8" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" /> <!-- Allow TV boxes -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/printer"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.cups.android.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.cups.android.AdvancedPrintOptionsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppThemeDialog" >
        </activity>
        <activity
            android:name="org.cups.android.AddPrinterActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/add_printer_host"
                    android:scheme="@string/add_printer_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.cups.android.SharePrinterActivity"
            android:exported="true"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="org.cups.android.CupsPrintService"
            android:exported="true"
            android:permission="android.permission.BIND_PRINT_SERVICE" >
            <intent-filter>
                <action android:name="android.printservice.PrintService" />
            </intent-filter>

            <meta-data
                android:name="android.printservice"
                android:resource="@xml/printservice" />
        </service>
    </application>

</manifest>